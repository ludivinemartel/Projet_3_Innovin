{% extends "baseEmail.html.twig" %}

{% block tille %} Formulaire de contact  {% endblock %}

{% block stylesheets %} 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
{% endblock %}


{% block body %}
<h1 class=" text-center text-decoration-underline mb-4">Nouveau message</h1>
<div class="container">
  <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Nom - {{ data.name }}</h5>
                    <h5 class="card-title">Email - {{ data.email }}</h5>
                    <h5 class="card-title">Message</h5>
                    <p class="card-text">{{ data.content }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}