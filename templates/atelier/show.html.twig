{% block title %}Atelier{% endblock %}

{% block body %}
    <h1>Atelier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atelier.id }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ atelier.place }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ atelier. horaire}}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ atelier. address}}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ atelier.date ? atelier.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Invit√©s</th>
